+#ifndef __KERNEL__
+# include <stdio.h>
+# include <string.h>
+#else
+# include <linux/kernel.h>
+# include <linux/string.h>
+#endif
+#include <linux/mtd/mtd.h>
+#include <linux/mtd/map.h>
